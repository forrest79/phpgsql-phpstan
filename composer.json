{
	"name": "forrest79/phpgsql-phpstan",
	"description": "PhPgSql class reflection extension and settings for PHPStan.",
	"keywords": ["phpgsql", "phpstan"],
	"type": "phpstan-extension",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Jakub Trmota",
			"email": "jakub@trmota.cz"
		}
	],
	"require": {
		"php": "^8.3",
		"phpstan/phpstan": "^2.0"
	},
	"require-dev": {
		"forrest79/phpcs": "^2.3",
		"forrest79/phpcs-ignores": "^0.6",
		"forrest79/phpgsql": "^2.0",
		"phpstan/phpstan-strict-rules": "^2.0",
		"shipmonk/phpstan-rules": "^4.2"
	},
	"autoload": {
		"psr-4": {
			"Forrest79\\PhPgSql\\PHPStan\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Forrest79\\PhPgSql\\PHPStan\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"phpcs": "vendor/bin/phpcs --bootstrap=vendor/forrest79/phpcs-ignores/src/bootstrap-outdated.php -s src tests",
		"phpstan": "vendor/bin/phpstan analyse src tests"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": false
		}
	}
}
